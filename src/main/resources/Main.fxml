                            <cellValueFactory>
                                <PropertyValueFactory property="state" />
                            </cellValueFactory>
                        </TableColumn>
                        <TableColumn editable="false" prefWidth="131.0" sortable="false" text="Tape">
                            <cellValueFactory>
                                <PropertyValueFactory property="tape" />
                            </cellValueFactory>
                        </TableColumn>
