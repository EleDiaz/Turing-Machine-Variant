                            <cellValueFactory>
                                <PropertyValueFactory property="stack" />
                            </cellValueFactory>
                        </TableColumn>
                        <TableColumn editable="false" prefWidth="163.0" sortable="false" text="Actions">
                            <cellValueFactory>
                                <PropertyValueFactory property="actions" />
                            </cellValueFactory>
